<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Books</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        html, body {
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            overflow: hidden;
            background: #EDEDED url(https://wallpapertag.com/wallpaper/full/7/1/a/515814-vertical-beautiful-landscapes-wallpapers-2560x1600-download.jpg) center center no-repeat
        }
    </style>
</head>
<body>
    <nav>
        <ul class="menu">
            <li>@Html.ActionLink("Главная", "Index", "Home")</li>
        </ul>
    </nav>
    @RenderBody()
    <footer>@RenderSection("Footer")</footer>
    <div id="copyright">

        <h3>@DateTime.Now.ToShortTimeString() / @DateTime.Now.Day / @DateTime.Now.Month / @DateTime.Now.Year </h3>

    </div>

</body>
</html>
