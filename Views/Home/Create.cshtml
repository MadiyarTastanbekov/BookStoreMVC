@model BookStoreMVC.Models.Book

@{
    ViewBag.Title = "Редактировать книгу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создать книгу</h2>
@using (Html.BeginForm())
{
<p>
    @Html.LabelFor(m => m.Name, "Название книги")
    <br />
    @Html.EditorFor(m => m.Name)
    
</p>
<p>@Html.LabelFor(m=>m.Author,"Автор книги")
    <br/>
    @Html.EditorFor(m=>m.Author)
    </p>
    <p>@Html.LabelFor(m=>m.Price,"Цена")
    <br/>
    @Html.EditorFor(m=>m.Price)</p>
    <input type="submit" value="Добавить" />
}

